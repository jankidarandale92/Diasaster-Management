<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    tools:context=".Flood_recent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_margin="10sp"
            android:backgroundTint="#00838f">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Flood"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="Recent"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t1"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="  2023 Thoothukkudi-Tirunelveli floods, heaving flooding in Thoothukkudi and Tirunelveli districts in December 2023 due to heavy rainfall."
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c3"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c3"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text=" 2023 Chennai floods, heaving flooding in Chennai in December 2023 due to Cyclone Michaung."
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c4"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c3"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="  2023 Himalayan floods occurred after heavy rain caused flooding and landslides, killing at least 50 people.
"
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c5"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c3"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text=" 2023 North India floods after heavy rainfall in North Indian states.
"
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c6"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c6"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text=" 2022 Balrampur floods after heavy rains, with over 1300 villages affected
"
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c7"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c7"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text=" 2022 Assam floods, heavy flooding in Assam State in May 2022.
"
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c8"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c8"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text=" 2021 Maharashtra floods, widespread flooding in Mahad and Chiplun on 22 July 2021 caused by exceptionally heavy rainfall.
"
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c9"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c10"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text=" 2021 Uttarakhand flood, flood in Uttarakhand in February 2021 caused by an avalanche from Ronti peak
"
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c10"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#E0F2F1">

            <TextView

                android:id="@+id/t11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c10"
                android:layout_marginTop="10dp"
                android:background="#E0F2F1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="2020 Hyderabad floods, flash flood in Hyderabad in October 2020 that caused 98 fatalities, a part of the 2020 North Indian Ocean cyclone season"
                android:textColor="@color/black"


                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>




    </RelativeLayout>
</ScrollView>