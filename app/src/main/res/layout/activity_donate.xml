<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donate">
    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Donation"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="30dp"
            android:background="#00838F"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L2"
        android:layout_below="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/donatephoto" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/t1"
        android:layout_below="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter receivers Bank Details :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/L3"
        android:layout_below="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Name :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:padding="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/L4"
        android:layout_below="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Account No.:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter account no."
            android:padding="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/L5"
        android:layout_below="@+id/L4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Branch :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your branch "
            android:padding="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/L6"
        android:layout_below="@+id/L5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Bank Name :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your bank name "
            android:padding="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/L7"
        android:layout_below="@+id/L6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Ammount  :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter ammount you want to donate"
            android:padding="10dp"/>

    </LinearLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="90dp"
        android:id="@+id/b1"
        android:layout_below="@+id/L6"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00838F"
        android:text="Donate"
        android:textSize="20dp"/>





</RelativeLayout>