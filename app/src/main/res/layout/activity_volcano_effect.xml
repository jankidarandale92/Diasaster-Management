<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    tools:context=".Volcano_effect">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#00838f">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Volcanic Erruption"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:background="#E0F2F1"
            android:text="Effects "
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:id="@+id/t2"
            android:layout_below="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="1.Lava Flows: "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t3"
            android:layout_below="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text=" The most direct and immediate impact of a volcanic eruption is the flow of lava. Lava can destroy everything in its path, including vegetation, buildings, and infrastructure.

" android:textSize="15dp"

            >

        </TextView>
        <TextView

            android:id="@+id/t4"
            android:layout_below="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="2. Pyroclastic Flows: "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t5"
            android:layout_below="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="These are fast-moving currents of hot gas, ash, and volcanic rock that can travel down the slopes of a volcano at high speeds. Pyroclastic flows are extremely destructive and can cause widespread devastation.
            "
            android:textSize="15dp"

            >

        </TextView>
        <TextView

            android:id="@+id/t6"
            android:layout_below="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="3.Ashfall: "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t7"
            android:layout_below="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Volcanic ash is made up of fine particles of rock and glass. Ashfall can cover large areas, disrupting transportation, damaging crops, and posing respiratory health risks to humans and animals."
            >

        </TextView>
        <TextView

            android:id="@+id/t8"
            android:layout_below="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="4. Tephra and Volcanic Bombs: "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t9"
            android:layout_below="@+id/t8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text=" During an eruption, a volcano can eject large rocks and debris, known as volcanic bombs, into the surrounding area. These projectiles can cause damage to infrastructure and pose a danger to life." android:textSize="15dp"

            >

        </TextView>

        <TextView

            android:id="@+id/t10"
            android:layout_below="@+id/t9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="5. Gas Emissions: "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t11"
            android:layout_below="@+id/t10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Volcanoes release various gases during eruptions, including sulfur dioxide, carbon dioxide, and water vapor. These gases can contribute to air pollution and have environmental impacts, such as acid rain." android:textSize="15dp"
            >

        </TextView>
        <TextView

            android:id="@+id/t12"
            android:layout_below="@+id/t11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="6. Climate Effects: "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t13"
            android:layout_below="@+id/t12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Volcanic eruptions can release large amounts of ash and gases into the atmosphere. Fine ash particles can reflect sunlight, leading to temporary cooling of the Earth's surface. However, sulfur dioxide can contribute to the formation of sulfate aerosols, which can have a more prolonged cooling effect." >

        </TextView>
        <TextView

            android:id="@+id/t14"
            android:layout_below="@+id/t13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="7.Changes in Landscape:"
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t15"
            android:layout_below="@+id/t14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="The topography of an area can be dramatically altered by volcanic activity. Craters, calderas, and new volcanic landforms may be created." >

        </TextView>
    </RelativeLayout>
</ScrollView>