<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    tools:context=".Draught_effect">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#00838f">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Drought"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:background="#E0F2F1"
            android:text="Effects "
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:id="@+id/t2"
            android:layout_below="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="1. Water Scarcity:  "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t3"
            android:layout_below="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="The most immediate and obvious impact of drought is a reduction in water availability. This affects not only surface water sources like rivers and lakes but also groundwater levels, leading to water shortages for agriculture, industry, and domestic use."
            android:textSize="15dp">

        </TextView>
        <TextView

            android:id="@+id/t4"
            android:layout_below="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="2. Agricultural Impacts:"
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t5"
            android:layout_below="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Drought has a severe impact on agriculture, reducing crop yields and affecting livestock. Crops may fail due to lack of water, leading to food shortages and increased prices. This can result in economic hardships for farmers and food insecurity for communities."  android:textSize="15dp"

            >

        </TextView>
        <TextView

            android:id="@+id/t6"
            android:layout_below="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="3.Ecosystem Stress: "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t7"
            android:layout_below="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Drought puts stress on natural ecosystems, affecting flora and fauna. Reduced water availability can lead to the drying up of wetlands, rivers, and lakes, harming aquatic ecosystems. Plants may wither, and wildlife may face challenges in finding food and water." android:textSize="15dp"

            >

        </TextView>
        <TextView

            android:id="@+id/t8"
            android:layout_below="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="4. Wildfires:"
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t9"
            android:layout_below="@+id/t8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Prolonged dry conditions during a drought create favorable conditions for wildfires. Vegetation becomes more susceptible to ignition, and the risk of large and uncontrollable fires increases. This poses a threat to ecosystems, human settlements, and air quality." android:textSize="15dp"

            >

        </TextView>

        <TextView

            android:id="@+id/t10"
            android:layout_below="@+id/t9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="5. Impact on Biodiversity:  "
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t11"
            android:layout_below="@+id/t10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Drought can lead to changes in the distribution and abundance of species, as some may struggle to adapt or migrate to more suitable habitats. This can result in shifts in biodiversity patterns and potential extinctions of vulnerable species." android:textSize="15dp"
            >

        </TextView>
    </RelativeLayout>
</ScrollView>