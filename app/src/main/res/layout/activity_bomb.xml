<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Bomb"
tools:ignore="ExtraText"
android:background="@drawable/b3">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_margin="10sp"
    android:backgroundTint="#00838f">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="BOMB BLAST"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>

</androidx.cardview.widget.CardView>

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:autoStart="true"
        android:flipInterval="1500"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right" >
<ImageView
    android:id="@+id/img1"
    android:layout_width="match_parent"
    android:layout_height="262dp"
    android:background="@drawable/bomb" />
        <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:background="@drawable/bomb1" />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:background="@drawable/bomb2" />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:background="@drawable/bomb3" />
    </ViewFlipper>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#E0F2F1">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="DO'S:"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    >

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="\n 1.Seek Shelter: If you are near the site of a bomb blast or explosion, seek immediate shelter to protect yourself from debris and secondary impacts.\n\n 2.Stay Calm: Try to stay as calm as possible. Panic can cloud your judgment and hinder your ability to make safe decisions.\n\n 3.Assist Others: If it is safe to do so, assist others who may be injured or in distress. Call for help and provide basic first aid if you have the training and resources.\n\n 4.Follow Instructions: If emergency services or authorities issue instructions, follow them promptly and without hesitation.\n\n 5.Evacuate if Necessary: If you are instructed to evacuate an area due to the risk of further explosions or dangers, do so immediately.\n\n 6.Call for Help: Use your mobile phone or any available means to call for emergency assistance if needed."
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    >

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#E0F2F1">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="DON'T:"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:text="\n 1.Don't Rush Toward the Blast Site: Avoid running towards the site of the explosion, as there may be additional risks or secondary explosions. Move away from the danger.\n\n 2.Don't Touch Unfamiliar Objects: Do not touch or pick up unfamiliar or suspicious objects, as they may be explosive devices or hazardous materials.\n\n 3.Don't Use Open Flames: Avoid using open flames, including lighters or matches, as there may be gas leaks or flammable materials nearby.\n\n 4.Don't Stay Near Glass Windows: Move away from windows and glass structures to avoid injury from shattered glass. Take cover under a sturdy piece of furniture if possible.\n\n 5.Don't Block Emergency Services: Do not obstruct the path of emergency services, such as ambulances, fire trucks, or police vehicles, as they may need to reach the scene.\n\n 6.Don't Spread Rumors: Do not spread unverified information or rumors about the situation, as it can create unnecessary panic and confusion."
                    android:textSize="15dp"
                    >

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>






</LinearLayout>