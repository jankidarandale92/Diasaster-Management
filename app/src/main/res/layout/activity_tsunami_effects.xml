<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    tools:context=".Tsunami_effects">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_margin="10sp"
            android:backgroundTint="#00838f">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Tsunami"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:background="#E0F2F1"
            android:text="Effects "
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:id="@+id/t2"
            android:layout_below="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="1.  Destruction of Infrastructure:"
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t3"
            android:layout_below="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Tsunamis can cause extensive damage to buildings, roads, bridges, and other infrastructure near the coast. The force of the water and debris carried by the waves can demolish structures in their path."
            android:textSize="15dp"

            >

        </TextView>
        <TextView

            android:id="@+id/t4"
            android:layout_below="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="2.  Loss of Life:"
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t5"
            android:layout_below="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="One of the most tragic consequences of a tsunami is the loss of life. The powerful force and speed of these waves can result in casualties, often due to drowning, blunt trauma, or injuries caused by debris."
            android:textSize="15dp"

            >

        </TextView>
        <TextView

            android:id="@+id/t6"
            android:layout_below="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="3.  Flooding:"
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t7"
            android:layout_below="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="Tsunamis can cause widespread and severe flooding, leading to the inundation of coastal and low-lying areas. This flooding can persist for an extended period, causing further damage to homes and businesses."
            android:textSize="15dp"

            >

        </TextView>
        <TextView

            android:id="@+id/t8"
            android:layout_below="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="4.  Environmental Impact:"
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t9"
            android:layout_below="@+id/t8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="The impact of a tsunami goes beyond human infrastructure. It can cause significant damage to the natural environment, including erosion of coastlines, destruction of ecosystems, and contamination of soil and water bodies due to the debris carried by the waves."
            android:textSize="15dp"

            >

        </TextView>

        <TextView

            android:id="@+id/t10"
            android:layout_below="@+id/t9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="5.  Displacement of People:"
            android:textSize="15dp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView

            android:id="@+id/t11"
            android:layout_below="@+id/t10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:text="sunamis can force people to evacuate their homes, leading to displacement and homelessness. Many individuals and families might lose their homes and livelihoods, resulting in a need for temporary or long-term relocation and assistance."
            android:textSize="15dp"
            >

        </TextView>







    </RelativeLayout>
</ScrollView>