<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    tools:context=".D_Articles">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Articles"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#00838F"
                >
            </TextView>
        </LinearLayout>



        <GridLayout
            android:id="@+id/Grid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="6">

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="#E0F2F1"
                app:cardCornerRadius="30dp"
                app:cardElevation="11dp"

                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="220dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        android:src="@drawable/earthq">

                    </ImageView>

                    <TextView

                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Earthquack"
                        android:textColor="@color/black"
                        android:textSize="27dp"
                        android:textStyle="bold">


                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <HorizontalScrollView
            android:id="@+id/horizontal1"
            android:layout_below="@+id/Grid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/E_history"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="History"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/E_recent"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Recent"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/E_effects"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:text="Effects"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <GridLayout
            android:id="@+id/Grid2"
            android:layout_below="@+id/horizontal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="6">

            <androidx.cardview.widget.CardView

                android:layout_width="340dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:backgroundTint="#E0F2F1"
                app:cardCornerRadius="30dp"
                app:cardElevation="11dp"

                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="220dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        android:src="@drawable/tsunami1">

                    </ImageView>

                    <TextView

                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Tsunami"
                        android:textColor="@color/black"
                        android:textSize="27dp"
                        android:textStyle="bold">


                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
        <HorizontalScrollView
            android:id="@+id/horizontal2"
            android:layout_below="@+id/Grid2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView

                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/T_history"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="History"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/T_recent"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Recent"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/T_effects"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:text="Effects"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>
        <GridLayout
            android:id="@+id/Grid3"
            android:layout_below="@+id/horizontal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="6">

            <androidx.cardview.widget.CardView

                android:layout_width="340dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:backgroundTint="#E0F2F1"
                app:cardCornerRadius="30dp"
                app:cardElevation="11dp"

                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="220dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        android:src="@drawable/cyclone">

                    </ImageView>

                    <TextView

                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Cyclone"
                        android:textColor="@color/black"
                        android:textSize="27dp"
                        android:textStyle="bold">


                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
        <HorizontalScrollView
            android:id="@+id/horizontal3"
            android:layout_below="@+id/Grid3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView

                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/C_history"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="History"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/C_recent"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Recent"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#00838F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/C_effects"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:text="Effects"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="27dp"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>



    </RelativeLayout>
</ScrollView>