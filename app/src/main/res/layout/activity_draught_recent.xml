<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    tools:context=".Draught_recent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_margin="10sp"
            android:backgroundTint="#00838f">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Drought"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="Impact"
            android:textColor="@color/black"
            android:background="#E0F2F1"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <HorizontalScrollView
            android:layout_below="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_marginTop="20dp"
                android:layout_below="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#00838f"
                        android:text="Year"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#00838f"
                        android:text="Impact of Drought"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:textSize="19dp">

                    </TextView>


                </TableRow>
                <TableRow
                    >

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#E0F2F1"
                        android:text="1876-1877"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#E0F2F1"
                        android:text="Known as the Great Famine. Widespread crop failures and starvation led to 5-10 million deaths. \nConsidered the worst Indian famine."
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>


                </TableRow>
                <TableRow
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="1899-1900"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="Affected large parts of India. Over 4.5 million died due to starvation and disease."
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>


                </TableRow>
                <TableRow
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#E0F2F1"
                        android:text="1965"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#E0F2F1"
                        android:text="Drought impacted several states. National food supply struggled with 344.6 lakh tonnes of \nfoodgrain issue."
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>


                </TableRow>
                <TableRow
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="1972"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="Parts of Rajasthan, Gujarat and 5 other states were affected. Reduced paddy production by 38%."
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>

                </TableRow>
                <TableRow
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="1979"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="Seen in north, east and west India impacting crops. One of the severest in terms of rain deficiency."
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>


                </TableRow>
                <TableRow
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="1982"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="Deficient monsoon caused drought in many states including Maharashtra, Gujarat, Karnataka."
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>

                </TableRow>
                <TableRow
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="1987"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="Lowest rainfall in 100 years. Over 60% area impacted with 85 million people affected

"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>


                </TableRow>
                <TableRow
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="2002"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E0F2F1"
                        android:text="Extreme severity with 56% rainfall deficiency in August-September. Widespread rural poverty surge."
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="19dp">

                    </TextView>

                </TableRow>


            </TableLayout>


        </HorizontalScrollView>

    </RelativeLayout>
</ScrollView>